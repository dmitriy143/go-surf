section.holder.sleep
  .container
    .title
      div
        span.wow.fadeInLeft(data-wow-offset="300") sleep
        h3 sleep
    .holder__slider
      - for(let i=0; i<8; i++)
        .holder__slider-item.holder-slider
          .holder-slider__head(style="background-image: url('img/sleep-lider-bg.png')")
            .holder-slider__subtitle
              .subtitile.wow.fadeInRight(data-wow-offset="400")
                .headline-left Resorts
                .subtitile__head Auberge 
                  span |
                  |  Australia
          .holder-slider__descr(style="background-image: url('img/hammock.png')")
            .descr
              .headline-right Rating
              .descr__head Excellent
                ul.holder__star-list
                  - for(let i = 0; i < 5; i++)
                    li
                      img(src="img/star.png" alt="")
          .holder-slider__info
            .holder-slider__info-item.wow.fadeInUp(data-wow-offset="400" data-wow-delay=".3s")
              .holder-slider__info-subtitle Resort
              .holder-slider__info-title Auberge <br> Australia
            .holder-slider__info-item.wow.fadeInUp(data-wow-offset="400" data-wow-delay=".6s")
              .holder-slider__info-subtitle # of Nights
              .holder-slider__info-title 
                .quantity
                  input.nights(type="number" min="1" max="9" step="1" value="5")
                | Nights
            .holder-slider__info-item.wow.fadeInUp(data-wow-offset="400" data-wow-delay=".9s")
              .holder-slider__info-subtitle # of Guests
              .holder-slider__info-title 
                .quantity
                  input.guests(type="number" min="1" max="9" step="1" value="4")
                | Guests
            .holder-slider__info-item.wow.fadeInUp(data-wow-offset="400" data-wow-delay="1.2s")
              .holder-slider__info-subtitle Pricing
              .holder-slider__info-title 
                span.summ(data-nights="55" data-guests="25") $349
                | USD
                span.holder-pricing__span Per Night
          .holder-slider__btn
            if i===0
              a.btn.wow.fadeInUp(href="#" data-wow-delay="1.5s") Book
                span Stay
            else
              a.btn(href="#") Book
                span Stay